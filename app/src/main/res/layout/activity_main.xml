<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sangsigi.number.MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/mainScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"

        sl:scale_base_height="640"
        sl:scale_base_width="400">

        <TextView
            android:id="@+id/coinstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="0/0"
            android:textColor="@android:color/black"
            android:gravity="center"

            sl:scale_top="40"
            sl:scale_left="150"
            sl:scale_textsize="30"
            sl:scale_width="100"
            sl:scale_height="40"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:visibility="gone"
            sl:scale_height="50"
            sl:scale_left="200"
            sl:scale_top="30"
            sl:scale_width="50" />

        <Button
            android:id="@+id/mode1start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"

            sl:scale_height="100"
            sl:scale_left="60"
            sl:scale_textsize="50"
            sl:scale_top="270"
            sl:scale_width="130"></Button>

        <Button
            android:id="@+id/mode2start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            sl:scale_height="100"
            sl:scale_left="210"
            sl:scale_textsize="50"
            sl:scale_top="270"
            sl:scale_width="130"></Button>


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            sl:scale_height="640"
            sl:scale_width="400"

            ></FrameLayout>
    </com.ssomai.android.scalablelayout.ScalableLayout>


</RelativeLayout>
